<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapFragment">


    <android.support.v7.widget.CardView
        android:layout_width="371dp"
        android:layout_height="93dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="28dp">

        <ImageView
            android:id="@+id/gold_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/account_text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/gold" />

        <TextView
            android:id="@+id/gold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_marginTop="43dp"
            android:text="GOLD: "
            android:textSize="26sp" />

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="Account"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gold_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="43dp"
            android:textSize="26sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="371dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="130dp">

        <ImageView
            android:id="@+id/dolr_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/account_text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/dolr" />

        <ImageView
            android:id="@+id/peny_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/account_text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="85dp"
            android:src="@drawable/peny" />

        <ImageView
            android:id="@+id/quid_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/account_text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/quid" />

        <ImageView
            android:id="@+id/shil_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/account_text"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="155dp"
            android:src="@drawable/shil" />

        <TextView
            android:id="@+id/exchange_rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="Exchange Rates To GOLD"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dolr_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="50dp"
            android:text="DOLR"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/peny_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="85dp"
            android:text="PENY"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="120dp"
            android:text="QUID"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shil_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="155dp"
            android:text="SHIL"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dolr_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="50dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/peny_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="85dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quid_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="120dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shil_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="140dp"
            android:layout_marginTop="155dp"
            android:textSize="18sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="371dp"
        android:layout_height="218dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="Transaction History"
            android:textSize="18sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/trans_recycler_view"
            android:layout_width="355dp"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:scrollbars="vertical" />

    </android.support.v7.widget.CardView>


</RelativeLayout>