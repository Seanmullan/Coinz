<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderBoardFragment">

    <Button
        android:id="@+id/btn_friends_lb"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/friends_lb_recycler_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="43dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Friends"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <Button
        android:id="@+id/btn_global_lb"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/friends_lb_recycler_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Global"
        android:textColor="@color/common_google_signin_btn_text_dark_default" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_lb_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="vertical" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/global_lb_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/lb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="67dp"
        android:text="User"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/lb_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:layout_marginStart="200dp"
        android:text="Gold"
        android:textSize="24sp" />

</RelativeLayout>